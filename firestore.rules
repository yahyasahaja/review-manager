rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to get user email
    // Note: Application code stores emails in lowercase, so comparison should work
    function getUserEmail() {
      return request.auth.token.email;
    }

    // Helper function to check if user is in allowedUserEmails array
    function isInAllowedUsers(allowedUserEmails) {
      return allowedUserEmails != null &&
             allowedUserEmails.size() > 0 &&
             allowedUserEmails.hasAny([getUserEmail()]);
    }

    // Helper function to check if user is in the same room as a review
    function isInSameRoom(roomId) {
      let room = get(/databases/$(database)/documents/rooms/$(roomId));
      return room != null &&
             room.data != null &&
             (room.data.createdBy == getUserEmail() ||
              (room.data.allowedUserEmails != null &&
               isInAllowedUsers(room.data.allowedUserEmails)));
    }

    // Rooms collection
    match /rooms/{roomId} {
      // Allow authenticated users to create rooms (must be the creator)
      allow create: if isAuthenticated() &&
                       request.resource.data.createdBy == getUserEmail();

      // Allow read if user is authenticated
      // Application code will check if user is in allowedUsers
      allow read: if isAuthenticated();

      // Allow update if user is creator OR in allowedUserEmails
      allow update: if isAuthenticated() &&
                       (resource.data.createdBy == getUserEmail() ||
                        isInAllowedUsers(resource.data.allowedUserEmails));

      // Allow delete if user is creator
      allow delete: if isAuthenticated() &&
                       resource.data.createdBy == getUserEmail();
    }

    // Reviews collection
    match /reviews/{reviewId} {
      // Allow create if user is authenticated and is in the room
      allow create: if isAuthenticated() &&
                       request.resource.data.createdBy == getUserEmail() &&
                       isInSameRoom(request.resource.data.roomId);

      // Allow read if user is authenticated and is in the room
      allow read: if isAuthenticated() &&
                     isInSameRoom(resource.data.roomId);

      // Allow update if user is:
      // - Review creator, OR
      // - In the same room (room creator or in allowedUsers)
      // Note: Assignee checks are handled at application level
      allow update: if isAuthenticated() &&
                       (resource.data.createdBy == getUserEmail() ||
                        isInSameRoom(resource.data.roomId));

      // Allow delete if user is:
      // - Review creator, OR
      // - In the same room (room creator or in allowedUsers)
      allow delete: if isAuthenticated() &&
                       (resource.data.createdBy == getUserEmail() ||
                        isInSameRoom(resource.data.roomId));
    }
  }
}
